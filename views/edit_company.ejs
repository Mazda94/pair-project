<%- include('./partials/header', {page : 'Admin'}) %>
<div class="container my-5">
    <form class="col-md-8">
        <h3 class="text-left">Company List</h3>
        <hr>
        <div class="form-group">
            <label for="name">Company Name</label>
            <input type="text" class="form-control" id="name" value="<%= company.companyName %>">
        </div>
        <div class="form-group">
            <label for="stock">Stocks</label>
            <input type="number" class="form-control" id="stock" value="<%= company.stocks %>">
        </div>
        <div class="form-group">
            <label for="changes">Changes</label>
            <input type="text" class="form-control" id="changes" value="<%= company.changes %>">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="text" class="form-control" id="price" value="<%= company.price %>">
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>
</div>
<%- include('./partials/footer')%>