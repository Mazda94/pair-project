<%- include('./partials/header', {page : 'Home', role : null}) %>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8"
            style="background-image: url(/images/financial.svg); background-size: 100vh; background-repeat: no-repeat;">
        </div>
        <div class="col-md-4 px-5 py-4 border border-right-0 rounded-left mt-5 bg-light">
            <% if(msg){ %>
            <div class="alert alert-danger" role="alert">
                <%= msg %>
            </div>
            <% } %>
            <form action="/login" method="POST">
                <h2>Login</h2>
                <hr>
                <div class="form-group">
                    <label for="username">Email / Username</label>
                    <input type="text" class="form-control" id="username" name="username"
                        value="<%= data ? data.username : '' %>">
                    <% if(data) { %>
                    <% if(data.username === '') { %>
                    <small class="text-danger">Username is required</small>
                    <% } %>
                    <% } %>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password"
                        value="<%= data ? data.password : '' %>">
                    <% if(data) { %>
                    <% if(data.password === '') { %>
                    <small class="text-danger">Password is required</small>
                    <% } %>
                    <% } %>
                </div>
                <button type="submit" class="btn btn-primary mb-4">Login</button>
                <br>
                <span class="mt-5">Belum punya akun?</span>
                <a href="/register">Daftar</a>
            </form>
        </div>
    </div>
</div>
<%- include('./partials/footer')%>